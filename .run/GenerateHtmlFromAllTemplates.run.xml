<component name="ProjectRunConfigurationManager">
  <configuration default="false" name="GenerateHtmlFromAllTemplates" type="JUnit" factoryName="JUnit">
    <module name="datavault-webapp" />
    <extension name="coverage">
      <pattern>
        <option name="PATTERN" value="org.datavaultplatform.webapp.app.config.*" />
        <option name="ENABLED" value="true" />
      </pattern>
    </extension>
    <extension name="software.aws.toolkits.jetbrains.core.execution.JavaAwsConnectionExtension">
      <option name="credential" />
      <option name="region" />
      <option name="useCurrentConnection" value="false" />
    </extension>
    <option name="PACKAGE_NAME" value="org.datavaultplatform.webapp.app.config" />
    <option name="MAIN_CLASS_NAME" value="org.datavaultplatform.webapp.app.config.ThymeleafTemplateTest" />
    <option name="METHOD_NAME" value="" />
    <option name="TEST_OBJECT" value="class" />
    <envs>
      <!-- you can change this to point to another directory to compare html files generated using old and new template files -->
      <env name="DV_LOCAL_TEST_TEMPLATE_OUTPUT_BASE_DIR" value="$PROJECT_DIR$/TEMPLATES" />
    </envs>
    <method v="2">
      <option name="Make" enabled="true" />
    </method>
  </configuration>
</component>