    <id>assembly</id>
    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>datavault-home</directory>
            <outputDirectory>datavault-home</outputDirectory>
